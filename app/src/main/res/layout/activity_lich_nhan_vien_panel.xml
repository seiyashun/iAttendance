<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.LichNhanVienPanel">
    <android.support.v7.widget.Toolbar
        android:background="#c59783"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbarLichNhanVienPanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />

    <LinearLayout
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:text="Lịch Nhân Viên Đăng Ký"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtNgayNhanVienDangKy"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:textColor="#e71313"
                    android:text="18/08/1996"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.tomer.fadingtextview.FadingTextView
                    android:textColor="#f10b76"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="center"
                    app:timeout="500"
                    android:id="@+id/txtClickHere"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listNhanVienDangKy"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="#000"
                android:text="Lịch Quản Lý Sắp Xếp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listQuanLySapXep"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnLuuLichLamNhanVienDangKy"
            android:layout_margin="5dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnResetLichLamNhanVien"
            android:layout_margin="5dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>