<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <EditText
        android:hint="Tên Chức Vụ"
        android:id="@+id/edtTenChucVu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Mã Chức Vụ"
        android:id="@+id/edtMaChucVu"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtTenChucVu"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="number"
        android:digits="0123456789."
        android:hint="Hệ Số Lương"
        android:id="@+id/edtHeSoLuong"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtMaChucVu"
        android:layout_height="wrap_content" />
</RelativeLayout>